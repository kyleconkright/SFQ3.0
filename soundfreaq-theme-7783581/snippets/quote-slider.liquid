<div class="frame" id="quote-slider">    

        {% if template contains 'index' %}
           
            <ul class="quote-slider">
            {% for product in collections.frontpage.products %}
                {% assign productName = {{product.handle}} %}
                {% for i in (1..9) %}
                {% capture pagebg %}{{productName}}-quote-{{i}}-bg.jpg{% endcapture %}
                {% capture showBg %}{{productName}}-show-bg-quote-{{i}}{% endcapture %}
                {% capture showHome %}{{productName}}-show-quote-{{i}}{% endcapture %}
                {% capture currentQuote %}{{productName}}-quote-{{i}}{% endcapture %}
                {% capture currentSource %}{{productName}}-quote-{{i}}-src-logo.png{% endcapture %}
                {% capture showHome %}{{productName}}-show-quote-{{i}}{% endcapture %}
                {% capture textAlign %}{{productName}}-quote-{{i}}-text-align{% endcapture %}
                {% capture textColor %}{{productName}}-quote-{{i}}-text-color{% endcapture %}
                {% capture textLength %}{{productName}}-quote-{{i}}-text-length{% endcapture %}
                {% capture imgRight %}{{productName}}-quote-{{i}}-img-align{% endcapture %}
                {% capture currentLink %}{{productName}}-quote-{{i}}-internal-link{% endcapture %}
                    {% if settings[showHome] %}
                        <li class="frame slide" {% if settings[showBg] %}style="background-image: url({{ pagebg | asset_url }}); color: {{settings[textColor]}}"{% endif %}>
                            {% if settings[imgRight] %}
                            <div class="bit-{{settings[textLength]}}">
                                <p class="quote" style="text-align: {{settings[textAlign]}};"><q>{{settings[currentQuote]}}</q></p>
                                <p class="source" style="text-align: {{settings[textAlign]}};"><i class="fa fa-minus"></i><img src="{{ currentSource | asset_url }}"</p>
                            </div>
                            <div class="bit-2"></div>

                            {% else %}
                            
                            <div class="bit-2"></div>
                            <div class="bit-{{settings[textLength]}}">
                                <p class="quote" style="text-align: {{settings[textAlign]}};"><q>{{settings[currentQuote]}}</q></p>
                                <p class="source" style="text-align: {{settings[textAlign]}};"><i class="fa fa-minus"></i><img src="{{ currentSource | asset_url }}"</p>
                            </div>
                            {% endif %}
                            <a href="{{settings[currentLink]}}" class="learn">Read More about <span class="product">{{product.title}}</span></a>
                        </li>
                    {% endif %}
                {% endfor %}
            {% endfor %}
            </ul>

        {% endif %} {% comment %}---------- HOME PAGE ----------{% endcomment %}


        {% if template contains 'product' %}
          
            <ul class="quote-slider">
            
                {% for i in (1..9) %}
                {% capture showPage %}{{product.handle}}-show-quote-page-{{i}}{% endcapture %}
                {% capture currentQuote %}{{product.handle}}-quote-{{i}}{% endcapture %}
                {% capture currentSource %}{{product.handle}}-quote-{{i}}-src-logo.png{% endcapture %}
                {% capture currentLink %}{{product.handle}}-quote-{{i}}-link{% endcapture %}
                {% if settings[showPage] %}
                    <li class="frame slide">
                        <div class="bit-1">
                            <p class="quote"><q>{{settings[currentQuote]}}</q></p>
                            <p class="source"><i class="fa fa-minus"></i><img src="{{ currentSource | asset_url }}"</p>
                        </div>
                        <a href="{{settings[currentLink]}}" target="_blank" class="learn">Full Review</a>
                    </li>
                {% endif %}
            {% endfor %}
            </ul>

        {% endif %} {% comment %}---------- PRODUCT PAGE ----------{% endcomment %}


  

</div><!--PRODUCTS-->